<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_descriptive"
    android:layout_margin="12dp"
    card_view:strokeColor="@color/border_gray"
    card_view:strokeWidth="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10.5dp"
        android:paddingTop="12dp"
        android:paddingEnd="10.5dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            tools:src="@drawable/ic_profiledefault" />

        <TextView
            android:id="@+id/name_user_CardHome"
            style="@style/Components_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageProfile"
            android:text="Nombre Uusario"
            android:textColor="@color/fonts_base" />

        <ImageButton
            android:id="@+id/btnCallUser"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_stroke"
            android:contentDescription="@string/addUser_CalendarFragment"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_ic_phone" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>