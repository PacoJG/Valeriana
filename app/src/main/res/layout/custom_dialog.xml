<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_light"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/date_CardHome"
                style="@style/TextField_Placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="@color/fonts_base" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time_CardHome"
                style="@style/TextField_Placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/fonts_base" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTag"
            style="@style/Contact_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Tag"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/tvAsunto"
            style="@style/Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTag"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Asunto"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/tv1"
            style="@style/Contact_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAsunto"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:text="@string/tvPrescripcion"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/tvPrescripcion"
            style="@style/Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Prescripcion"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/tv2"
            style="@style/Contact_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrescripcion"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:text="@string/tvIndicacion"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/tvIndicaciones"
            style="@style/Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Indicaciones"
            android:textColor="@color/fonts_base" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>