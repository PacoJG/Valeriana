<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_descriptive"
    android:layout_margin="12dp"
    card_view:strokeColor="@color/border_gray"
    card_view:strokeWidth="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10.5dp"
        android:paddingEnd="10.5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/date_CardHome"
                style="@style/card_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="@color/fonts_base" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time_CardHome"
                style="@style/card_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/fonts_base" />

            <Space
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Tag_CardHome"
                style="@style/Tag_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tag"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Extraccion"
                android:textColor="@color/green_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/name_user_CardHome"
            style="@style/Components_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:text="Frank Mendoza"
            android:textColor="@color/fonts_base" />

        <TextView
            android:id="@+id/asuntoCita_CardHome"
            style="@style/Content_Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user_CardHome"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:text="Se necesita una extracciÃ³n del 2do molar debido a una fractura." />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>